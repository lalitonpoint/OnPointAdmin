<link rel="stylesheet" href="/admin/css/vehicleManagement/truck.css">
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">✨ Vehicle Management</h3>
        <div>
            <button class="btn btn-success me-2" id="downloadAllCsv">
                <i class="fas fa-download me-2"></i> Download CSV
            </button>
            <button class="btn btn-pink" data-bs-toggle="modal" data-bs-target="#vehicleModal">
                <i class="fas fa-plus me-2"></i> Add Vehicle
            </button>
        </div>
    </div>

    <div class="card shadow-sm mb-4" id="searchvehiclesCard">
        <div class="card-body">
            <h5 class="mb-3">Search Vehicle</h5>
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="searchName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="searchName" placeholder="Enter Name">
                </div>
                <div class="col-md-3">
                    <label for="searchDesignation" class="form-label">Designation</label>
                    <input type="text" class="form-control" id="searchDesignation" placeholder="Enter Designation">
                </div>
                <div class="col-md-3">
                    <label for="searchRating" class="form-label">Rating</label>
                    <select id="searchRating" class="form-select">
                        <option value="">All</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="searchStatus" class="form-label">Status</label>
                    <select id="searchStatus" class="form-select">
                        <option value="">All</option>
                        <option value="1">Active</option>
                        <option value="2">Inactive</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="searchCreatedAt" class="form-label">Created At</label>
                    <input type="date" class="form-control" id="searchCreatedAt">
                </div>
                <div class="col-md-3">
                    <div class="d-flex gap-2 align-items-end">
                        <button class="btn btn-primary" id="searchBtn">Search</button>
                        <button class="btn btn-secondary" id="resetBtn">Reset</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="vehicleTable" class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Vehicle Name</th>
                            <th>Vehicle Body</th>
                            <th>Service Type</th>
                            <th>Vehcile Image</th>
                            <th>Status</th>
                            <th>Created At</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="vehicleModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg custom-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add vehicle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="vehicleForm">
                    <input type="hidden" id="vehicleId">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="name" class="form-label">Vehicle Name <strong
                                    class="text-danger">*</strong></label>
                            <input type="text" class="form-control" id="name" name="name"
                                placeholder="Enter Vehcile Name">
                        </div>
                        <div class="col-md-6">
                            <label for="designation" class="form-label">Vehicle Body <strong
                                    class="text-danger">*</strong></label>
                            <select class="form-select" name="bodyType" id="bodyType">
                                <option value="">Select Bodytype</option>
                                <option value="Open Body">Open Body</option>
                                <option value="Closed Body">Closed Body</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="serviceType" class="form-label">Service Type <strong
                                    class="text-danger">*</strong></label>
                            <select class="form-select" name="serviceType" id="serviceType">
                                <option value="">Select Service Type</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Status <strong class="text-danger">*</strong></label>
                            <select class="form-select" name="status" id="status">
                                <option value="">Select Status</option>
                                <option value="1">Active</option>
                                <option value="2">Inactive</option>
                            </select>
                        </div>

                    </div>

                    <div class="row mb-3">


                        <div class="col-md-6">
                            <label class="form-label">Tire Type <strong class="text-danger">*</strong></label>
                            <select class="form-select" name="tireType" id="tireType">
                                <option value="">Select Tire Type</option>
                                <option value="2">2 Tire</option>
                                <option value="4">4 Tire</option>
                                <option value="6">6 Tire</option>
                                <option value="8">8 Tire</option>
                                <option value="10">10 Tire</option>
                                <option value="12">12 Tire</option>
                                <option value="14">14 Tire</option>
                                <option value="16">16 Tire</option>
                                <option value="18">18 Tire</option>
                                <option value="22">22 Tire</option>
                                <option value="24">24 Tire</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="capacity" class="form-label">Vehicle Capacity <strong
                                    class="text-danger">*</strong></label>
                            <input type="number" class="form-control" id="capacity" name="capacity"
                                placeholder="Enter Vehcile Capacity">
                        </div>

                    </div>

                    <div class="row mb-3">

                        <div class="col-md-6">
                            <label class="form-label">Vehcile Image <strong class="text-danger">*</strong></label>
                            <input type="file" class="form-control image_view" name="vechileImage" id="vechileImage"
                                accept="image/*">
                            <div id="imagePreviewContainer" class="mt-2" style="display: none;">
                                <img id="imagePreview" src="#" alt="Profile Image Preview"
                                    style="max-width: 100px; max-height: 100px;">
                            </div>
                        </div>
                    </div>



                    <button type="submit" class="btn btn-pink w-100">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $.ajax({
            url: '/vehicle/getServiceData',
            type: 'GET',
            success: function (response) {
                if (response.status) {
                    const services = response.serviceData || []; // ✅ FIX: access the 'services' array
                    const dropdown = $('#serviceType');
                    dropdown.empty(); // Clear existing options
                    dropdown.append('<option value="" selected readonly>Select Service Type</option>');

                    // Append driver options
                    services.forEach(service => {
                        const name = service.serviceName || 'No Name';
                        const id = service._id;
                        dropdown.append(`<option value="${id}">${name}</option>`);
                    });


                }
            },
            error: function (xhr, status, error) {
                console.error("Error fetching warehouse data:", error);
            }
        });

        // Initially hide the search vehicle card using jQuery
        const searchvehiclesCard = $('#searchvehiclesCard');
        searchvehiclesCard.hide();

        // Slide down the search vehicle card when the page loads
        $(window).on('load', function () {
            searchvehiclesCard.slideDown(1000); // Adjust the duration (in milliseconds) as needed
        });

        let ckEditor; // Declare editor outside the create function

        ClassicEditor.create(document.querySelector('#testmonial_description'))
            .then(editor => {
                ckEditor = editor;
            })
            .catch(error => {
                console.error(error);
            });


        // Image Preview Functionality
        $('.image_view').change(function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').attr('src', e.target.result);
                    $('#imagePreviewContainer').show();
                }
                reader.readAsDataURL(file);
            } else {
                $('#imagePreview').attr('src', '#');
                $('#imagePreviewContainer').hide();
            }
        });

        let table = $('#vehicleTable').DataTable({ // Initialize DataTable first
            processing: true,
            serverSide: true,
            pageLength: 10,
            lengthMenu: [10, 25, 50, 100],
            scrollY: "400px",
            scrollCollapse: true,
            searching: false, // This line disables the default DataTables search
            ajax: {
                url: '/vehicle/vehicleList',
                type: 'POST',
                data: function (d) {
                    d.name = $('#searchName').val();
                    d.designation = $('#searchDesignation').val();
                    d.rating = $('#searchRating').val();
                    d.status = $('#searchStatus').val();
                    d.createdAt = $('#searchCreatedAt').val();
                }
            },
            columns: [{
                data: null,
                orderable: false, // Disable ordering for the Profile Image column
                render: (data, type, row, meta) => meta.row + meta.settings._iDisplayStart + 1
            },
            {
                data: 'name'
            },
            {
                orderable: false, // Disable ordering for the Profile Image column
                data: 'bodyType'
            },
            {
                orderable: false, // Disable ordering for the Profile Image column
                data: 'serviceType.serviceName'
            },
            {
                data: 'vechileImage',
                orderable: false, // Disable ordering for the Profile Image column
                render: (data) => `<img src="${data}" class="rounded-circle" width="50" height="50">`
            },
            {
                data: 'status',
                orderable: false, // Disable ordering for the Profile Image column
                render: (data, type, row) => {
                    const statusText = data === 1 ? 'Active' : 'Inactive';
                    const newStatus = data === 1 ? 2 : 1; // Toggle status
                    return `<span class="badge ${data === 1 ? 'bg-success' : 'bg-secondary'} changeStatus" data-id='${row._id}' data-status='${newStatus}' style="cursor: pointer;">${statusText}</span>`;
                }
            }, // Added badge for better visual and clickability
            {
                data: 'createdAt',
                render: (data) => new Date(data).toLocaleString()
            },
            {
                data: null,
                orderable: false,

                render: (data, type, row) => `
                                            <button class="btn btn-sm btn-warning editvehicleBtn" data-id='${row._id}'><i class="fas fa-edit"></i> Edit</button>
                                            <button class="btn btn-sm btn-danger delvehicleBtn" data-id='${row._id}'><i class="fas fa-trash"></i> Delete</button>
                                        `
            }
            ]
        });


        $('#vehicleModal').on('submit', function (e) {
            e.preventDefault();
            const formElement = document.getElementById('vehicleForm');
            if (formElement) {
                let isValid = true;

                const name = $('#name').val().trim();
                if (!name) {
                    toastr.error('Vehicle Name is required.', 'Error');
                    return;
                }

                const bodyType = $('#bodyType').val().trim();
                if (!bodyType) {
                    toastr.error(' Body Type is required.', 'Error');
                    return;
                }


                const serviceType = $('#serviceType').val();
                if (!serviceType) {
                    toastr.error(' Service Type is required.', 'Error');
                    return;
                }
                const status = $('#status').val();
                if (!status) {
                    toastr.error('Status is required.', 'Error');
                    return;
                }


                const tireType = $('#tireType').val();
                if (!tireType) {
                    toastr.error('tireType is required.', 'Error');
                    return;
                }
                const capacity = $('#capacity').val();
                if (!capacity) {
                    toastr.error('Capacity is required.', 'Error');
                    return;
                }

                const vechileImage = $('#vechileImage')[0].files[0];
                if (!vechileImage && !$('#vehicleId').val()) { // Required on add
                    toastr.error('Vehcile Image is required on adding new vehicle.', 'Error');
                    return;
                }




                const formData = new FormData(formElement);
                const id = $('#vehicleId').val();
                const actionUrl = id ? '/vehicle/updateVehicle/' + id : '/vehicle/addvehicle';

                // Update description in FormData with CKEditor content


                $.ajax({
                    url: actionUrl,
                    type: 'post',
                    data: formData,
                    processData: false,
                    contentType: false,
                    dataType: 'json',
                    success: function () {
                        // $('#vehicleModal').modal('hide');
                        $('.btn-close').click();

                        table.ajax.reload();
                        $('#vehicleForm')[0].reset();

                        $('#vehicleId').val('');
                        $('#modalTitle').text('Add vehicle');
                        toastr.success('vehicle saved successfully!', 'Success');
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX request failed:", status, error, xhr);
                        toastr.error('An error occurred while saving the vehicle.', 'Error'); // Use toastr for AJAX error
                    }
                });
            } else {
                console.error("Error: The form element with ID 'vehicleForm' was not found.");
            }
        });

        $('#vehicleModal').on('show.bs.modal', function (event) {
            const button = $(event.relatedTarget); // Button that triggered the modal
            const id = button.data('id'); // Extract info from data-* attributes
            const modalTitle = $('#modalTitle');
            const vehicleId = $('#vehicleId');
            const form = $('#vehicleForm')[0];
            const imagePreview = $('#imagePreview');
            const imagePreviewContainer = $('#imagePreviewContainer');

            form.reset(); // Reset the form every time the modal is shown
            if (ckEditor) {
                ckEditor.setData('');
            }
            vehicleId.val('');
            imagePreview.attr('src', '#');
            imagePreviewContainer.hide();
            modalTitle.text('Add vehicle');

            if (id) {
                modalTitle.text('Edit vehicle');
                vehicleId.val(id);
                // Fetch vehicle data and populate the form for editing
                $.ajax({
                    url: '/vehicle/getvehicle/' + id, // Replace with your actual route
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        // console.log(data.data.name);
                        $('#name').val(data.data.name);
                        $('#bodyType').val(data.data.bodyType);
                        $('#capacity').val(data.data.capacity);
                        $('#tireType').val(data.data.tireType);
                        if (data.data.vechileImage) {
                            imagePreview.attr('src', data.data.vechileImage);
                            imagePreviewContainer.show();
                        }
                        $('#status').val(data.data.status);

                    },
                    error: function (xhr, status, error) {
                        console.error("Error fetching vehicle:", status, error, xhr);
                        toastr.error('Error fetching vehicle data for editing.', 'Error');
                    }
                });
            }
        });

        // Event delegation for Edit button
        $('#vehicleTable').on('click', '.editvehicleBtn', function () {
            const vehicleId = $(this).data('id');
            $('#vehicleModal').modal('show', this); // Pass the button element for context
        });

        // Event delegation for Delete button
        $('#vehicleTable').on('click', '.delvehicleBtn', function () {
            const vehicleId = $(this).data('id');

            swalConfirm('Are you sure you want to delete this vehicle?', function () {
                $.ajax({
                    url: '/vehicle/deletevehicle/' + vehicleId,
                    type: 'DELETE',
                    dataType: 'json',
                    success: function () {
                        table.ajax.reload();
                        toastr.success('Vehicle deleted successfully!', 'Success');
                    },
                    error: function (xhr, status, error) {
                        console.error("Error deleting vehicle:", status, error, xhr);
                        toastr.error('Error deleting vehicle.', 'Error');
                    }
                });
            });
        });

        $('#vehicleTable').on('click', '.changeStatus', function () {
            const vehicleId = $(this).data('id');
            const newStatus = $(this).data('status'); // Get the new status from the data attribute
            const statusText = parseInt(newStatus) === 1 ? 'Active' : 'Inactive'; // For confirmation message

            if (confirm(`Are you sure you want to set the status to ${statusText}?`)) {
                $.ajax({
                    url: '/vehicle/changeStatus/' + vehicleId,
                    type: 'post',
                    dataType: 'json',
                    contentType: 'application/json', // Important for sending JSON data in the body
                    data: JSON.stringify({ status: newStatus }), // Send the new status in the request body
                    success: function (response) {
                        if (response.success) {
                            table.ajax.reload();
                            toastr.success(response.message, 'Success');
                        } else {
                            toastr.error(response.message || 'Failed to change status.', 'Error');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error changing status:", status, error, xhr);
                        toastr.error('Error changing status.', 'Error');
                    }
                });
            }
        });
        // Prevent modal from staying open on form submission error (if any)
        $('#vehicleModal').on('hidden.bs.modal', function () {
            $(this).find('.is-invalid').removeClass('is-invalid');
            $(this).find('.invalid-feedback').remove();
        });

        // --- Custom Search Functionality ---
        $('#searchBtn').on('click', function () {
            table.ajax.reload(); // Reload the DataTable, the search parameters are sent in the ajax.data function
        });

        $('#resetBtn').on('click', function () {
            $('#searchName').val('');
            $('#searchDesignation').val('');
            $('#searchRating').val('');
            $('#searchStatus').val('');
            $('#searchCreatedAt').val('');
            table.ajax.reload(); // Reload to clear all filters
        });

        // --- Custom Download All CSV Functionality ---
        $('#downloadAllCsv').on('click', function () {
            window.location.href = '/vehicle/downloadAllCsv'; // Trigger a download by navigating to the URL
        });
    });
</script>