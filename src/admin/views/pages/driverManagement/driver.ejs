            $('#driverTable').on('click', '.delDriverBtn', function () {
                const id = $(this).data('id');
                swalConfirm('Are you sure you want to delete this driver?', function () {
                    $.ajax({
                        url: `/driver/deleteDriver/${id}`,
                        type: 'DELETE',
                        success: function (response) {
                            Swal.fire('Deleted!', response.message, 'success');
                            table.ajax.reload();
                        },
                        error: function () {
                            Swal.fire('Error!', 'Failed to delete driver', 'error');
                        }
                    });
                });
            });


            $('#driverModal').on('hidden.bs.modal', function () {
                $('#driverForm')[0].reset();
                $('#modalTitle').text('Add Driver');
                $('#driverId').val(''); // Clear driver ID on modal close

            });
            $('#editDriverModal').on('hidden.bs.modal', function () {
                $('#driverApprovedToggle').prop('checked', false).removeAttr('data-id');
                //location.reload(); // This will reload the page
            });
        });

        $(document).on('change', '#driverApprovedToggle', function () {
            const isChecked = $(this).is(':checked');
            const driverId = $(this).data('id');
            const status = isChecked ? 1 : 0;
            // console.log(driverId);

            Swal.fire({
                title: 'Are you sure?',
                text: `You are about to ${isChecked ? 'approve' : 'disable'} this driver.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, confirm it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Proceed with update
                    $.ajax({
                        url: '/driver/updateApproval',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ driverId, approved: status }),
                        success: function (response) {
                            Swal.fire('Updated!', response.message || 'Driver status updated.', 'success').then(() => {
                                location.reload(); // refresh the page
                            });
                        },
                        error: function () {
                            Swal.fire('Error!', 'Something went wrong. Try again later.', 'error');
                        }
                    });
                } else {
                    // Revert toggle if cancelled
                    $(this).prop('checked', !isChecked);
                }
            });
        });

    </script>
