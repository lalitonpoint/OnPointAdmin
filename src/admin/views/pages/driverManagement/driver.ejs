    <script>
        $(document).ready(function () {
            let table = $('#driverTable').DataTable({
                processing: true,
                serverSide: true,
                dom: 'lrtip', // removes the default search box

                ajax: { url: '/driver/driverList', type: 'POST' },
                columns: [
                    { data: null, render: (data, type, row, meta) => meta.row + 1 },
                    { data: 'personalInfo.name' },
                    { data: 'personalInfo.email' },
                    { data: 'personalInfo.mobile' },
                    { data: 'personalInfo.altMobile' },
                    { data: 'createdAt', render: (data) => new Date(data).toLocaleString() },
                    {
                        data: null,
                        render: (data, type, row) => `
                            <button class="btn btn-sm btn-warning editDriverBtn" data-id='${row._id}'><i class="fas fa-edit"></i> Edit</button>
                            <button class="btn btn-sm btn-danger delDriverBtn" data-id='${row._id}'><i class="fas fa-trash"></i> Delete</button>`
                    }
                ]
            });

            $('#driverForm').submit(function (e) {
                e.preventDefault();
                const id = $('#driverId').val();
                const formData = new FormData(this); // Use FormData to include files

                const url = '/driver/saveDrivers'; // Updated URL to match controller

                $.ajax({
                    url,
                    type: 'POST',
                    data: formData,
                    contentType: false, // Don't set content type, let browser handle it for FormData
                    processData: false, // Don't process the data
                    success: function (response) {
                        Swal.fire('Created!', response.message || 'Driver created successfully.', 'success').then(() => {
                            location.reload(); // refresh the page
                        });
                        $('#driverModal').modal('hide');
                        $('#driverForm')[0].reset();
                        $('#modalTitle').text('Add Driver'); // Reset modal title after save
                    },
                    error: function () { alert('Failed to save driver'); }
                });
            });

            $('#editDriverForm').submit(function (e) {
                e.preventDefault();
                const id = $('#driverId').val();
                const formData = new FormData(this); // Use FormData to include files

                const url = `/driver/updateDriver/${id}`; // Updated URL to match controller

                $.ajax({
                    url,
                    type: 'POST',
                    data: formData,
                    contentType: false, // Don't set content type, let browser handle it for FormData
                    processData: false, // Don't process the data
                    success: function (response) {
                        toastr.success(response.message, 'Success');

                        if (table.ajax) {
                            table.ajax.reload();
                            $('.btn-close').click();

                        }
                        $('#editDriverForm').modal('hide');
                        // $('#driverForm')[0].reset();
                        // $('#modalTitle').text('Add Driver'); // Reset modal title after save
                    },
                    error: function () { alert('Failed to save driver'); }
                });
            });

            $('#driverTable').on('click', '.editDriverBtn', function () {
                const id = $(this).data('id');
                $('#editDriverModal').modal('show');
                $('#editDriverModal form')[0].reset(); // Reset form inputs
                $('#driverApprovedToggle').prop('checked', false).removeAttr('data-id');
                // $('#editProfileImg').attr('src', '/images/default-profile.png');
                $('#editDriverId,#driverApprovedToggle').val('');

                $.get(`/driver/getDriver/${id}`, function (data) {
                    const driver = data.driver;
                    const vehicle = driver.vehicleDetail;
                    $('#driverId, #editDriverId').val(id);
                    $('#driverApprovedToggle').prop('checked', driver.approvalStatus === 1).attr('data-id', driver._id);

                    // Personal Detail Tab
                    $('#editName').val(driver.personalInfo.name);
                    $('#editEmail').val(driver.personalInfo.email);
                    $('#editDateOfBirth').val(driver.personalInfo.dob);
                    // $('#editDateOfBirth').val(driver.personalInfo.dob ? `${driver.personalInfo.dob.split('/')[2]}-${driver.personalInfo.dob.split('/')[1]}-${driver.personalInfo.dob.split('/')[0]}` : '');
                    $('#editGender').val(driver.personalInfo.gender);
                    $('#editMobileNo').val(driver.personalInfo.mobile);
                    $('#editAlternateMobileNo').val(driver.personalInfo.altMobile);
                    $('#editProfileImg').attr('src', driver.personalInfo.profilePicture); // Set profile image or default

                    // Address Details Tab - Permanent Address
                    $('#permanentHouseNo').val(driver.addressInfo.permanent.street);
                    $('#permanentCity').val(driver.addressInfo.permanent.city);
